<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SendToActivity">

    <android.support.design.widget.AppBarLayout
        android:background="#fff"
        android:id="@+id/Send_To_CardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.v7.widget.Toolbar
            android:layout_height="wrap_content"
            android:layout_width="match_parent">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:padding="10dp"
                    android:id="@+id/back_Send_To"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_arrow_back_gray_blue_24dp"
                    android:layout_centerVertical="true"/>
                <EditText
                    android:id="@+id/Send_To_edittext"
                    android:background="@android:color/transparent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="To"
                    android:textColor="#000"
                    android:textSize="20dp"
                    android:layout_toEndOf="@+id/back_Send_To"
                    android:layout_toRightOf="@+id/back_Send_To"
                    android:layout_marginStart="20dp"
                    android:layout_marginLeft="20dp"
                    android:layout_centerVertical="true"/>

            </RelativeLayout>
        </android.support.v7.widget.Toolbar>
    </android.support.design.widget.AppBarLayout>

    <RelativeLayout
        android:layout_below="@+id/Send_To_CardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/Send_To_WhoCaller"
        android:background="@color/com_facebook_button_border_color_focused">
        <TextView
            android:padding="3dp"
            android:layout_toEndOf="@+id/Send_To_WhoCaller_icon"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Contacts on Whocaller"
            android:textSize="20dp"
            android:textColor="#000"
            android:layout_toRightOf="@+id/Send_To_WhoCaller_icon" />
        <ImageView
            android:layout_centerVertical="true"
            android:id="@+id/Send_To_WhoCaller_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_chat_sms_on_whocaller"
            />
    </RelativeLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/Send_To_RecyclerView"
        android:layout_below="@+id/Send_To_WhoCaller"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"></android.support.v7.widget.RecyclerView>


</RelativeLayout>