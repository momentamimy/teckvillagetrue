<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content">

    <ProgressBar
        android:id="@+id/progress"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:visibility="gone"
        android:theme="@style/AppTheme.grayAccent"
        />
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/progress_contact_img"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_margin="10dp"
        android:src="@drawable/ic_nurse"
        android:visibility="gone"
        />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/contact_img_log_recycle"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_margin="10dp"
        android:src="@drawable/ic_nurse"
        />

    <TextView
        android:id="@+id/name_of_log"
        android:layout_toEndOf="@+id/contact_img_log_recycle"
        android:layout_toRightOf="@+id/contact_img_log_recycle"
        android:layout_marginTop="14dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Abdalla Kamash"
        android:textSize="20sp"
        android:textColor="@android:color/black"
         />


    <ImageView
        android:id="@+id/type_of_call"
        android:layout_width="13dp"
        android:layout_height="13dp"
        android:layout_marginTop="8dp"
        android:layout_below="@+id/name_of_log"
        android:layout_toEndOf="@+id/contact_img_log_recycle"
        android:layout_toRightOf="@+id/contact_img_log_recycle"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:src="@drawable/ic_left_down"
        android:contentDescription="arrow" />

    <TextView
        android:id="@+id/date_of_call_log"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="6:13 p.m"
        android:textSize="19sp"
        android:layout_marginTop="1dp"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:layout_below="@+id/name_of_log"
        android:layout_toEndOf="@+id/type_of_call"
        android:layout_toRightOf="@+id/type_of_call"
        />


    <TextView
        android:id="@+id/type_of_num_log"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mobile"
        android:textSize="18sp"
        android:layout_marginTop="1dp"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:layout_below="@+id/name_of_log"
        android:layout_toEndOf="@+id/date_of_call_log"
        android:layout_toRightOf="@+id/date_of_call_log"
        />
</RelativeLayout>