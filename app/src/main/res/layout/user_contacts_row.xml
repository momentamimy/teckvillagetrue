<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content" android:layout_height="wrap_content"
    android:layout_marginStart="10dp"
    android:layout_marginEnd="10dp"
    android:layout_marginTop="9dp"
    android:layout_marginBottom="9dp">



    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/usercontactimg"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_margin="10dp"
        android:src="@drawable/ic_nurse"
        />

    <TextView
        android:id="@+id/nameofcontacts"
        android:layout_toEndOf="@+id/usercontactimg"
        android:layout_toRightOf="@+id/usercontactimg"
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Abdalla Kamash"
        android:textSize="16sp"
        android:textColor="@android:color/black"
        />



    <TextView
        android:id="@+id/country"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="PortSaid,Egypt"
        android:textSize="14sp"
        android:layout_marginTop="1dp"
        android:layout_alignStart="@+id/nameofcontacts"
        android:layout_below="@+id/nameofcontacts"
        android:layout_alignLeft="@+id/nameofcontacts" />

    <ImageView
        android:id="@+id/chat_user_contact"
        android:layout_width="19dp"
        android:layout_height="19dp"
        android:src="@drawable/ic_chat_user_contacts"
        android:layout_centerVertical="true"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="30dp"
        android:layout_marginRight="30dp"
        android:layout_alignParentRight="true"
         />
</RelativeLayout>