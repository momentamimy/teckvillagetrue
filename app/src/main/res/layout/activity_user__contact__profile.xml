<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f1f1f1"
    android:orientation="vertical"
    tools:context="teckvillage.developer.khaled_pc.teckvillagetrue.View.User_Contact_Profile">

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/wave_head"
        android:layout_width="match_parent"
        android:layout_height="245dp"
        android:scaleType="centerCrop"
        android:background="#fdfdfd"/>

    <RelativeLayout
        android:id="@+id/contacnerbackarrow"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_marginLeft="18dp"
        android:layout_marginTop="15dp"
        android:background="?android:attr/selectableItemBackground"
        >

    <View
        android:id="@+id/backarrow"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:background="@drawable/ic_arrow_back_gray_24dp" />


    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/contacnerMoreoption"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="8dp"
        android:layout_marginTop="15dp"
        android:background="?android:attr/selectableItemBackground"
        >

    <View
        android:id="@+id/moreoptionusercontact"
        android:layout_width="27dp"
        android:layout_height="28dp"
        android:visibility="visible"
        android:background="@drawable/ic_more_vert_black_24dp" />


    </RelativeLayout>


    <android.support.v7.widget.CardView
        android:id="@+id/image"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="45dp"
        app:cardCornerRadius="50dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/profilepic"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_nurse" />

    </android.support.v7.widget.CardView>

    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/image"
        android:text="Ahmad AbuKashef"
        android:textColor="#cc000000"
        android:textSize="22sp"
        android:textStyle="bold"
        android:layout_marginTop="10dp"/>


    <TextView
        android:visibility="gone"
        android:id="@+id/tag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/name"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp"
        android:background="@drawable/border"
        android:gravity="center"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:text="tag"
        android:textColor="#cc000000" />



    <LinearLayout
        android:id="@+id/mmmmm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/wave_head"
        android:layout_marginTop="2dp"
        android:paddingBottom="5dp"
        android:paddingTop="10dp"
        android:background="#fdfdfd"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/makecall"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="22dp"
                    android:gravity="center"
                    android:src="@drawable/phone_call_primary"
                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:gravity="center"
                    android:text="CALL"
                    android:textColor="#0089c0" />
            </LinearLayout>

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_marginBottom="8dp"
                android:layout_marginTop="8dp"
                android:background="#0089c0" />

            <LinearLayout
                android:id="@+id/sendmessage"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="22dp"
                    android:gravity="center"
                    android:src="@drawable/ic_chat_primary"
                    />


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:gravity="center"
                    android:text="MESSAGE"
                    android:textColor="#0089c0" />
            </LinearLayout>

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_marginBottom="8dp"
                android:layout_marginTop="8dp"
                android:background="#0089c0" />

            <LinearLayout
                android:id="@+id/makeblock"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/blockimagered"
                    android:layout_width="25dp"
                    android:layout_height="22dp"
                    android:gravity="center"
                    android:src="@drawable/ic_block_primary_24dp"
                    />

                <TextView
                    android:id="@+id/blocktextred"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:gravity="center"
                    android:text="BLOCK"
                    android:textColor="#0089c0" />
            </LinearLayout>
        </LinearLayout>


    </LinearLayout>



    <android.support.v7.widget.CardView
        android:id="@+id/Contact_CardView"
        app:cardCornerRadius="4dp"
        app:cardElevation="2dp"
        android:layout_marginTop="10dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_below="@id/mmmmm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.v7.widget.LinearLayoutCompat
            android:id="@+id/phonenumberparent"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:background="?android:attr/selectableItemBackground"
                android:id="@+id/phoneNumbercontanierlay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                >

            <TextView
                android:id="@+id/contactuserphonenumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="24dp"
                android:drawableLeft="@drawable/ic_phone_gray_24dp"
                android:drawablePadding="24dp"
                android:gravity="center"
                android:text="01280945456"
                android:textColor="#FF000000"
                android:layout_marginBottom="20dp"
                android:layout_marginTop="20dp"
                />
            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/historycontanierlay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone">

            <TextView
                android:id="@+id/history"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="24dp"
                android:drawableLeft="@drawable/ic_stop_watch"
                android:drawablePadding="24dp"
                android:gravity="center"
                android:text="View call histroy"
                android:textColor="#FF000000"
                android:layout_marginBottom="20dp"
                android:layout_marginTop="20dp"/>
            </RelativeLayout>

        </android.support.v7.widget.LinearLayoutCompat>
    </android.support.v7.widget.CardView>


    <android.support.v7.widget.CardView
        app:cardCornerRadius="4dp"
        app:cardElevation="2dp"
        android:layout_marginTop="10dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_below="@id/Contact_CardView"
        android:layout_marginBottom="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.v7.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:visibility="gone"
                android:id="@+id/emaillayoutcontanier"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <TextView
                android:id="@+id/emailusercontact"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="24dp"
                android:drawableLeft="@drawable/ic_email_blue_gray_24dp"
                android:drawablePadding="24dp"
                android:gravity="center"
                android:visibility="visible"
                android:text="khaledeltarabily@yajoo.com"
                android:textColor="#FF000000"
                android:layout_marginBottom="20dp"
                android:layout_marginTop="20dp"/>



            </RelativeLayout>


            <RelativeLayout
                android:visibility="gone"
                android:id="@+id/loactionlayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <TextView
                android:id="@+id/location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="24dp"
                android:drawableLeft="@drawable/ic_location_on_black_24dp"
                android:drawablePadding="24dp"
                android:gravity="center"
                android:text="Egypt"
                android:textColor="#FF000000"
                android:layout_marginBottom="20dp"
                android:layout_marginTop="20dp"/>
            </RelativeLayout>

        </android.support.v7.widget.LinearLayoutCompat>
    </android.support.v7.widget.CardView>
</RelativeLayout>
</ScrollView>
