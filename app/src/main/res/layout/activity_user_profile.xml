<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".UserProfileActivity">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/layoutPictures"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <com.intrusoft.squint.DiagonalView
            android:id="@+id/diagonal"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:scaleType="centerCrop"
            android:src="@drawable/tamimy"
            app:diagonalDirection="left_to_right"
            app:angle="12"
            app:gravity="right" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/UserPhoto"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@drawable/tamimy"
            android:layout_below="@+id/diagonal"
            android:layout_marginStart="30dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="-90dp"
            />


        <ImageView
            android:layout_marginEnd="30dp"
            android:layout_marginTop="-95dp"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/diagonal"
            android:id="@+id/btn_google2"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:src="@drawable/ic_googlelogo"
            android:padding="15dp"
            android:layout_marginStart="20dp"
            android:layout_marginLeft="20dp"
            android:background="@drawable/facebookcirclebackground"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp" />

        <ImageView
            android:layout_toStartOf="@+id/btn_google2"
            android:layout_marginTop="-80dp"
            android:layout_below="@+id/diagonal"
            android:id="@+id/login_button2"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:src="@drawable/ic_facebook"
            android:padding="13dp"
            android:background="@drawable/facebookcirclebackground"
            android:layout_toLeftOf="@+id/btn_google2" />
    </RelativeLayout>

    <TextView
        android:id="@+id/Contact"
        android:layout_below="@+id/layoutPictures"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CONTACT"
        android:textSize="25dp"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="20dp"
        android:textColor="@color/Tomyacolor"/>
    <android.support.v7.widget.CardView
        android:id="@+id/Contact_CardView"
        app:cardCornerRadius="10dp"
        app:cardElevation="10dp"
        android:layout_margin="20dp"
        android:layout_below="@id/Contact"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    <LinearLayout
        android:layout_below="@+id/layoutPictures"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <RelativeLayout
            android:layout_marginTop="20dp"
            android:background="?android:attr/selectableItemBackground"
            android:id="@+id/Phone_Edit_Layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:paddingRight="20dp"
            android:paddingLeft="20dp">
            <ImageView
                android:layout_centerVertical="true"
                android:id="@+id/phone_number_icon"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/ic_phone_gray_24dp"
                android:layout_marginEnd="20dp"
                android:layout_marginRight="20dp"
                />
            <TextView
                android:textColor="@color/Tomyacolor"
                android:id="@+id/phone_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="01021155607"
                android:layout_toEndOf="@+id/phone_number_icon"
                android:layout_toRightOf="@+id/phone_number_icon" />
            <TextView
                android:textColor="@color/Tomyacolor"
                android:textSize="15dp"
                android:layout_below="@+id/phone_number"
                android:id="@+id/phone_number_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mobile"
                android:layout_toEndOf="@+id/phone_number_icon"
                android:layout_toRightOf="@+id/phone_number_icon"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_edit_blue_gray_24dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/home_Edit_Layout"
            android:background="?android:attr/selectableItemBackground"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:paddingRight="20dp"
            android:paddingLeft="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_centerVertical="true"
                android:id="@+id/home_icon"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/ic_home_blue_gray_24dp"
                android:layout_marginEnd="20dp"
                android:layout_marginRight="20dp"
                />
            <TextView
                android:textColor="@color/Tomyacolor"
                android:id="@+id/home_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="My Address"
                android:layout_toEndOf="@+id/home_icon"
                android:layout_toRightOf="@+id/home_icon" />
            <TextView
                android:textColor="@color/Tomyacolor"
                android:textSize="15dp"
                android:layout_below="@+id/home_address"
                android:id="@+id/home_address_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Address"
                android:layout_toEndOf="@+id/home_icon"
                android:layout_toRightOf="@+id/home_icon"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_edit_blue_gray_24dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true" />
        </RelativeLayout>

        <RelativeLayout
            android:background="?android:attr/selectableItemBackground"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:paddingRight="20dp"
            android:paddingLeft="20dp"
            android:id="@+id/Email_Edit_Layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_centerVertical="true"
                android:id="@+id/Email_icon"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/ic_email_blue_gray_24dp"
                android:layout_marginEnd="20dp"
                android:layout_marginRight="20dp"
                />
            <TextView
                android:textColor="@color/Tomyacolor"
                android:id="@+id/Email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="momentamimy@gmail.com"
                android:layout_toEndOf="@+id/Email_icon"
                android:layout_toRightOf="@+id/Email_icon" />
            <TextView
                android:textColor="@color/Tomyacolor"
                android:textSize="15dp"
                android:layout_below="@+id/Email"
                android:id="@+id/Email_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Email"
                android:layout_toEndOf="@+id/Email_icon"
                android:layout_toRightOf="@+id/Email_icon"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_edit_blue_gray_24dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_marginBottom="20dp"
            android:background="?android:attr/selectableItemBackground"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:paddingRight="20dp"
            android:paddingLeft="20dp"
            android:id="@+id/Websie_Edit_Layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_centerVertical="true"
                android:id="@+id/Websie_icon"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginEnd="20dp"
                android:layout_marginRight="20dp"
                android:src="@drawable/ic_website" />
            <TextView
                android:textColor="@color/Tomyacolor"
                android:id="@+id/Websie"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="My Websie"
                android:layout_toEndOf="@+id/Websie_icon"
                android:layout_toRightOf="@+id/Websie_icon" />
            <TextView
                android:textColor="@color/Tomyacolor"
                android:textSize="15dp"
                android:layout_below="@+id/Websie"
                android:id="@+id/Websie_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Websie"
                android:layout_toEndOf="@+id/Websie_icon"
                android:layout_toRightOf="@+id/Websie_icon"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_edit_blue_gray_24dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true" />
        </RelativeLayout>
    </LinearLayout>
    </android.support.v7.widget.CardView>

    <TextView
        android:id="@+id/about"
        android:layout_below="@+id/Contact_CardView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ABOUT"
        android:textSize="25dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        android:textColor="@color/Tomyacolor"/>

    <android.support.v7.widget.CardView
        android:id="@+id/about_CardView"
        app:cardCornerRadius="10dp"
        app:cardElevation="10dp"
        android:layout_margin="20dp"
        android:layout_below="@id/about"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:layout_marginTop="10dp"
                android:background="?android:attr/selectableItemBackground"
                android:paddingTop="20dp"
                android:paddingBottom="20dp"
                android:paddingRight="20dp"
                android:paddingLeft="20dp"
                android:id="@+id/info_Edit_Layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_centerVertical="true"
                    android:id="@+id/info_icon"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="0dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginRight="20dp"
                    android:src="@drawable/ic_info_blue_gray_24dp" />
                <TextView
                    android:layout_centerVertical="true"
                    android:textColor="@color/Tomyacolor"
                    android:id="@+id/info"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="Add a short text about yourself"
                    android:layout_toEndOf="@+id/info_icon"
                    android:layout_toRightOf="@+id/info_icon" />
            </RelativeLayout>

            <LinearLayout
                android:layout_marginBottom="10dp"
                android:id="@+id/info_Gender_Layout"
                android:background="?android:attr/selectableItemBackground"
                android:paddingTop="20dp"
                android:paddingBottom="20dp"
                android:paddingRight="20dp"
                android:paddingLeft="20dp"
                android:layout_below="@+id/info_Edit_Layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Gender"/>
                <TextView
                    android:layout_marginTop="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Prefer not to say"/>
            </LinearLayout>
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>
</ScrollView>