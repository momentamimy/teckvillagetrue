<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content" android:layout_height="wrap_content"
    >


    <ProgressBar
        android:id="@+id/progress"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:layout_centerHorizontal="true"
        android:visibility="gone"
        android:theme="@style/AppTheme.grayAccent"
        />
    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_marginTop="10dp"
        android:id="@+id/progress_contact_img"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:src="@drawable/ic_nurse"
        android:layout_centerHorizontal="true"
        android:visibility="gone"
        />


    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_marginTop="10dp"
        android:id="@+id/contact_img"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:src="@drawable/ic_nurse"
        android:layout_centerHorizontal="true"
        />

    <me.grantland.widget.AutofitTextView
        android:id="@+id/contact_name"
        android:layout_below="@id/contact_img"
        android:layout_marginTop="5dp"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:maxLines="1"
        app:minTextSize="15sp"
        android:text="Momen El Tamimy"
        android:textColor="@android:color/black"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        />

    <TextView
        android:id="@+id/number_type"
        android:layout_below="@id/contact_name"
        android:layout_marginTop="2dp"
        android:textSize="12sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="Mobile"
        />

</RelativeLayout>