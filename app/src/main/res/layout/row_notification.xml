<?xml version="1.0" encoding="utf-8"?>
    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
    android:paddingLeft="15dp"
    android:paddingRight="15dp"
    android:paddingTop="8dp"
    android:paddingBottom="8dp"
    >

    <TextView
        android:layout_marginStart="20dp"
        android:layout_marginEnd="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="10dp"
        android:id="@+id/name_of_log"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Video Call!"
        android:textColor="@android:color/black"
        android:textSize="20sp"
        android:background="?android:attr/selectableItemBackground"
        android:layout_toStartOf="@+id/date_notifcation_message"
        android:layout_toLeftOf="@+id/date_notifcation_message" />


        <TextView
            android:layout_marginTop="2dp"
            android:id="@+id/text_sms_message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="please call me"
            android:textSize="16sp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginLeft="20dp"
            android:layout_below="@+id/name_of_log"
            android:textColor="@color/Tomyacolor" />


    <TextView
        android:id="@+id/date_notifcation_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="02:00 AM"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true" />
    <View
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/Tomyacolor"
        android:layout_below="@id/text_sms_message"/>

    </RelativeLayout>