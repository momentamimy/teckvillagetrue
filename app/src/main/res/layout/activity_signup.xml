<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="teckvillage.developer.khaled_pc.teckvillagetrue.View.Signup">

    <RelativeLayout
        android:id="@+id/signuplay1"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">



     <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/add_personal_image"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:background="@drawable/circle"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:src="@drawable/custom_camera_circle"
        android:padding="10dp"
        />


        <ImageView
            android:id="@+id/user_mg1"
            android:layout_below="@+id/add_personal_image"
            android:layout_marginTop="30dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_user"
            android:layout_marginStart="15dp"
            android:layout_marginLeft="15dp" />


        <android.support.design.widget.TextInputLayout
            android:id="@+id/input_layout_first_name"
            android:layout_below="@+id/add_personal_image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginStart="45dp"
            android:layout_marginEnd="40dp"
            android:layout_marginLeft="45dp"
            android:layout_marginRight="40dp">
            <EditText
                android:id="@+id/first_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="First name"
                android:textColor="@android:color/black"
                app:backgroundTint="#bac3c6"
                android:maxLines="1"
                android:inputType="text"
                />
        </android.support.design.widget.TextInputLayout>




        <ImageView
            android:id="@+id/user_mg"
            android:layout_below="@+id/input_layout_first_name"
            android:layout_marginTop="25dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_user"
            android:layout_marginStart="15dp"
            android:layout_marginLeft="15dp" />



        <android.support.design.widget.TextInputLayout
            android:id="@+id/input_layout_last_name"
            android:layout_below="@+id/input_layout_first_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="45dp"
            android:layout_marginEnd="40dp"
            android:layout_marginLeft="45dp"
            android:layout_marginRight="40dp">

            <EditText
                android:id="@+id/last_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Last name"
                android:textColor="@android:color/black"
                android:maxLines="1"
                app:backgroundTint="#bac3c6"
                android:inputType="text"
                />
        </android.support.design.widget.TextInputLayout>



        <ImageView
            android:id="@+id/user_mg3"
            android:layout_below="@+id/input_layout_last_name"
            android:layout_marginTop="25dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_mail_black_envelope_symbol"
            android:layout_marginStart="15dp"
            android:layout_marginLeft="15dp" />



        <android.support.design.widget.TextInputLayout
            android:id="@+id/input_layout_Email"
            android:layout_below="@+id/input_layout_last_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="45dp"
            android:layout_marginEnd="40dp"
            android:layout_marginLeft="45dp"
            android:layout_marginRight="40dp">

            <EditText
                android:id="@+id/Email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawablePadding="12dp"
                android:hint="Email"
                android:textColor="@android:color/black"
                android:maxLines="1"
                app:backgroundTint="#bac3c6"
                android:inputType="textEmailAddress"
                />
        </android.support.design.widget.TextInputLayout>


        <Button
            android:id="@+id/btn_continue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="continue"
            android:layout_alignParentBottom="true"
            android:background="#6b868f"
            android:textColor="@android:color/white"
            />

    </RelativeLayout>


    <LinearLayout
        android:id="@+id/signuplay2"
        android:layout_weight="3.5"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <com.facebook.login.widget.LoginButton
            android:id="@+id/login_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:gravity="center"
            android:layout_marginTop="20dp"
            android:elevation="5dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:layout_weight="1"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            />


        <Button
            android:id="@+id/btn_google"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:layout_below="@id/login_button"
            android:background="#6b868f"
            android:textColor="@android:color/white"
            />

    </LinearLayout>


</LinearLayout>
