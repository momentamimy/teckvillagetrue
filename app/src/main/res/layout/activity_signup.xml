<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:id="@+id/layoutsignuo"
    android:layoutDirection="ltr"
    tools:context="teckvillage.developer.khaled_pc.teckvillagetrue.View.Signup">


    <RelativeLayout
        android:id="@+id/signuplay1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:background="@color/colorPrimary"/>


     <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/add_personal_image"
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:background="@drawable/circle"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="75dp"
        android:src="@drawable/custom_camera_circle"
        android:padding="9dp"
          />



        <android.support.design.widget.TextInputLayout
            android:id="@+id/input_layout_first_name"
            android:layout_below="@+id/add_personal_image"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:hint="First name"
            android:layout_centerHorizontal="true"
           >
            <EditText
                android:id="@+id/first_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@android:color/black"
                app:backgroundTint="#bac3c6"
                android:maxLines="1"
                android:inputType="text"
                />
        </android.support.design.widget.TextInputLayout>






        <android.support.design.widget.TextInputLayout
            android:id="@+id/input_layout_last_name"
            android:layout_below="@+id/input_layout_first_name"
            android:layout_width="280dp"
            android:layout_centerHorizontal="true"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:hint="Last name"
           >

            <EditText
                android:id="@+id/last_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@android:color/black"
                android:maxLines="1"
                app:backgroundTint="#bac3c6"
                android:inputType="text"
                />
        </android.support.design.widget.TextInputLayout>





        <android.support.design.widget.TextInputLayout
            android:id="@+id/input_layout_Email"
            android:layout_below="@+id/input_layout_last_name"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:layout_centerHorizontal="true"
            android:hint="Email">

            <EditText
                android:id="@+id/Email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawablePadding="12dp"
                android:textColor="@android:color/black"
                android:maxLines="1"
                app:backgroundTint="#bac3c6"
                android:inputType="textEmailAddress"
                />
        </android.support.design.widget.TextInputLayout>


        <TextView
            android:id="@+id/btn_continue"
            android:layout_width="300dp"
            android:layout_height="35dp"
            android:text="CONTINUE"
            android:gravity="center"
            android:textSize="16sp"
            android:paddingTop="2dp"
            android:paddingBottom="2dp"
            android:layout_marginTop="30dp"
            android:paddingEnd="20dp"
            android:paddingStart="20dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/input_layout_Email"
            android:background="@drawable/diagonal_shape"
            android:textColor="@android:color/white"
             />

    </RelativeLayout>


<LinearLayout
    android:layout_centerHorizontal="true"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_below="@id/signuplay1"
    android:orientation="horizontal"
    android:layout_marginTop="5dp"
    >

    <ImageView
        android:id="@+id/login_button"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:src="@drawable/ic_facebook"
        android:padding="13dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/facebookcirclebackground"
         />


    <ImageView
        android:id="@+id/btn_google"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:src="@drawable/ic_googlelogo"
        android:padding="15dp"
        android:layout_marginStart="50dp"
        android:layout_marginLeft="50dp"
        android:background="@drawable/facebookcirclebackground"
        android:layout_marginTop="20dp"
         />
</LinearLayout>

</RelativeLayout>
